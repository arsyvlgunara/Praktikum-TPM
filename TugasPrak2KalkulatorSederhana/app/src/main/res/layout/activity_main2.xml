<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="50dp"
    android:gravity="center"
    android:layout_marginLeft="50dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/tanjiro_mask">
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Nama"
            android:text="Nama: "
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outNama"
            android:text=""
            android:layout_toRightOf="@+id/Nama"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/NIM"
            android:text="NIM: "
            android:layout_below="@id/Nama"
            android:layout_marginBottom="10dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outNIM"
            android:text=""
            android:layout_below="@id/Nama"
            android:layout_toRightOf="@id/NIM"
            android:layout_marginBottom="10dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Nilai"
            android:text="Nilai: "
            android:layout_below="@id/NIM"
            android:layout_marginBottom="10dp">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outNilai"
            android:text=""
            android:layout_below="@id/NIM"
            android:layout_toRightOf="@id/Nilai"
            android:layout_marginBottom="10dp">
        </TextView>

    </RelativeLayout>

</LinearLayout>